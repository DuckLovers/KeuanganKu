<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstTime">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/IconBackgroundColor">

            <ImageView
                android:layout_width="327dp"
                android:layout_height="259dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:contentDescription="Logo"
                android:src="@drawable/keuangankunobg" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@drawable/inverse_setengah_lingkaran"
                android:backgroundTint="@color/white"
                android:gravity="top"
                android:text="Selamat Datang"
                android:textAlignment="center"
                android:textColor="@color/whitesecond"
                android:textSize="40dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="25dp"
                android:textColor="@color/TextColor"
                android:text="Nama"
                android:textSize="30dp"/>
            <EditText
                android:id="@+id/inputNamaUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="25dp"
                android:hint="Masukkan Nama Anda"
                android:padding="5dp"
                android:inputType="text"
                android:textSize="24sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="25dp"
                android:textColor="@color/TextColor"
                android:text="Usia"
                android:textSize="30dp"/>

            <EditText
                android:id="@+id/inputUsiaUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="25dp"
                android:hint="Masukkan Usia Anda"
                android:inputType="number"
                android:padding="5dp"
                android:textSize="24sp" />

            <Button
                android:id="@+id/tombolInputUser"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="@color/ButtonColor"
                android:text="MASUK"
                android:textSize="24dp"/>

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>